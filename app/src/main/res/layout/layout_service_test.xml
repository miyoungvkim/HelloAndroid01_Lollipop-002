<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <Button
            android:id="@+id/btn_service_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Start" />

        <Button
            android:id="@+id/btn_service_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service bind" />

        <Button
            android:id="@+id/btn_service_unbind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Unbind" />

        <Button
            android:id="@+id/btn_service_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Stop" />
</LinearLayout>